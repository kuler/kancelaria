<%= simple_form_for @case do |f| %>

<%= f.association :client, :label_method => :shortname, :required=>true, :input_html => {:class => "chsn-select", "data-placeholder" => "Wybierz klienta..." }%>
<%= f.input :name, wrapper: 'bootstrap' %>
<%= f.input :files_signature, wrapper: 'bootstrap' %>
<%= f.input :description, wrapper: 'bootstrap', :input_html => { :rows => 10 }%>

<div class="form-actions">
	<%= link_to t('back'), cases_path, class: "btn" %>
	<%= f.submit t('save'), class: "btn btn-primary" %>
</div>
<% end %>
