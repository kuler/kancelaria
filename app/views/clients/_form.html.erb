<%= simple_form_for @client do |f| %>
<% if @client.errors.any? %>
<div id="error_explanation">
	<h2><%= pluralize(@client.errors.count, "error") %> prohibited this client from being saved:</h2>

	<ul>
		<% @client.errors.full_messages.each do |msg| %>
		<li>
			<%= msg %>
		</li>
		<% end %>
	</ul>
</div>
<% end %>

<%= f.input :shortname, wrapper: 'bootstrap' %>
<%= f.input :fullname, wrapper: 'bootstrap' %>
<%= f.input :active, wrapper: 'bootstrap' %>
<%= f.input :contact, wrapper: 'bootstrap' %>
<%= f.input :nip, wrapper: 'bootstrap' %>
<%= f.input :regon, wrapper: 'bootstrap' %>
<%= f.input :address, wrapper: 'bootstrap' %>

<div class="form-actions">
	<%= link_to 'Back', clients_path, class: "btn" %>
	<%= f.submit nil, class: "btn btn-primary" %>
</div>
<% end %>
