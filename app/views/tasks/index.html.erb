<h1>Listing tasks</h1>

<table class="table table-striped">
	<thead>
		<tr>
			<th>Nazwa</th>
			<th>Typ</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		<% @tasks.each do |task| %>
		<tr>
			<td><%= task.name %></td>
			<td><%= task.type.name %></td>
			<td><%= link_to 'Edit', edit_task_path(task), class: "btn btn-mini btn-primary" %>
			<%= link_to 'Destroy', task, confirm: 'Are you sure?', method: :delete, class: "btn btn-mini btn-danger" %></td>
		</tr>
		<% end %>
	</tbody>
</table>

<div class="form-actions">
<%= link_to 'Nowe zadanie', new_task_path, class: "btn btn-primary" %>
</div>
