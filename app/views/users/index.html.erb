<h1>Użytkownicy</h1>

<table class="table table-strip">
	<thead>
		<tr>
			<th>Username</th>		
			<th>Firstname</th>
			<th>Lastname</th>
			<th>Active</th>
			<th>Admin</th>						
			<th></th>
		</tr>
	</thead>
	<tbody>
		<% @users.each do |user| %>
		<tr>
			<td><%= user.username %></td>
			<td><%= user.firstname %></td>
			<td><%= user.lastname %></td>
			<td><%= user.active %></td>
			<td><%= user.admin %></td>
			<td><%= link_to 'Edit', edit_user_path(user), class: "btn btn-mini btn-primary" %>
			<%= link_to 'Destroy', user, confirm: 'Are you sure?', method: :delete, class: "btn btn-mini btn-danger" %></td>
		</tr>
		<% end %>
	</tbody>
</table>

<div class="form-actions">
	<%= link_to 'Nowy użytkownik', new_user_path, class: "btn btn-primary" %>
</div>
