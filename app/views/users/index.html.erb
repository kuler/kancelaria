<h1>Listing users</h1>

<table>
  <tr>
    <th>Username</th>
    <th>Password digest</th>
    <th>Firstname</th>
    <th>Lastname</th>
    <th>Active</th>
    <th>Admin</th>
    <th>Created</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.username %></td>
    <td><%= user.password_digest %></td>
    <td><%= user.firstname %></td>
    <td><%= user.lastname %></td>
    <td><%= user.active %></td>
    <td><%= user.admin %></td>
    <td><%= user.created %></td>
    <td><%= link_to 'Show', user %></td>
    <td><%= link_to 'Edit', edit_user_path(user) %></td>
    <td><%= link_to 'Destroy', user, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

